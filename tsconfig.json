{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "lib",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "lib": ["es2017", "dom"]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".vscode",
      "dist",
      "doc",
      "node_modules"
    ],
    "filesGlob": [
      "./src/**/*.ts",
      "./test/**/*.ts",
      "./custom_typings/**/*.d.ts"
    ],
    "atom": {
      "rewriteTsconfig": false
    }
  }
